<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- App Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movie Recommendation App"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Genre Selection Spinner -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Genre:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/genreSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/spinner_background"
        android:layout_marginBottom="24dp"
        android:padding="12dp" />

    <!-- Recommendations Section -->
    <TextView
        android:id="@+id/recommendationsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recommended Movies:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/recommendationsListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        android:background="#ffffff"
        android:divider="#e0e0e0"
        android:dividerHeight="1dp" />

    <!-- Movie Details Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movie Details:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/movieDetailsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a genre and then click on a movie to see details"
        android:textSize="14sp"
        android:padding="16dp"
        android:background="#ffffff"
        android:textColor="#666666"
        android:lineSpacingExtra="4dp" />

</LinearLayout>